<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
		id          = "myfirstapp"
        version     = "1.0.0" >

    <name>First app</name>
    <description>My first mobile app</description>
    <author href="https://github.com/uljot/pg-hello" email="uljot@example.com">
		uljot
	</author>
	<platform name="android"> 
		<icon src="www/img/android.png" density="mdpi" />
		<icon src="www/img/android.png" density="ldpi" />
		<icon src="www/img/android.png" density="hdpi" />
		<icon src="www/img/android.png" density="xhdpi" />
		<icon src="www/img/android.png" density="xxhdpi" />

		<splash src="www/img/splash.jpg" density="land-hdpi"/>
		<splash src="www/img/splash.jpg" density="land-ldpi"/>
		<splash src="www/img/splash.jpg" density="land-mdpi"/>
		<splash src="www/img/splash.jpg" density="land-xhdpi"/>

		<splash src="www/img/splash.jpg" density="port-hdpi"/>
		<splash src="www/img/splash.jpg" density="port-ldpi"/>
		<splash src="www/img/splash.jpg" density="port-mdpi"/>
		<splash src="www/img/splash.jpg" density="port-xhdpi"/>
	</platform>
	
	<plugin name="cordova-plugin-device" spec="2.0.1" />
	<plugin name="cordova-plugin-dialogs" spec="2.0.1" />
	<plugin name="cordova-plugin-network-information" spec="2.0.1" />
	<plugin name="cordova-plugin-device-motion" spec="2.0.1" />
	<plugin name="cordova-plugin-splashscreen" />

</widget>
